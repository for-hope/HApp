<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#FFFFFF"
    android:gravity="center"
    android:paddingBottom="15dp">

    <LinearLayout
        android:id="@+id/firstLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constrainedHeight="false"
        app:layout_constrainedWidth="false"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintEnd_toStartOf="@id/secondLayout">

        <Button
            android:id="@+id/generate_btn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_weight="0"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:backgroundTint="#0288D1"
            app:icon="@drawable/ic_mouth"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/_40sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/generate"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/my_videos_btn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:backgroundTint="#F57C00"
            android:drawableBottom="@drawable/ic_image_white_24dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:icon="@drawable/ic_file"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/_40sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/my_videos"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintBaseline_toBaselineOf="parent"
        app:layout_constraintStart_toEndOf="@id/secondLayout">

        <Button
            android:id="@+id/sound_btn"
            style="@style/Widget.MaterialComponents.Button.Icon"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_marginStart="18dp"
            android:layout_marginEnd="18dp"
            android:layout_weight="0"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            android:padding="0dp"
            app:backgroundTint="#512DA8"
            app:icon="@drawable/sound_ic"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconSize="@dimen/_40sdp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MyApp.Button.Circle" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0"
            android:gravity="center"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:text="@string/sound_library"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_10ssp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>